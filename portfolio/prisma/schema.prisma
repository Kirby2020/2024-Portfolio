generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Project {
  id           String      @id @unique @default(cuid())
  title        String
  type         ProjectType @default(Other)
  description  String
  url          String
  previewUrl   String
  dateCreated  DateTime?
  dateUploaded DateTime    @default(now())
  dateEdited   DateTime    @updatedAt
}

enum ProjectType {
  Other
  YouTube
  GitHub
}

model Image {
  id           String       @id @unique @default(cuid())
  tags         ImageTag[]
  collections  Collection[]
  fileName     String
  filePath     String
  dateCreated  DateTime?
  dateUploaded DateTime     @default(now())
  dateEdited   DateTime     @updatedAt
}

model ImageTag {
  id     Int     @id @unique @default(autoincrement())
  title  String
  images Image[]
}

enum ImageExtension {
  PNG
  JPG
  JPEG
  GIF
}

model Collection {
  id         String  @id @unique @default(cuid())
  title      String
  images     Image[]
  previewUrl String?
}

model Game {
  id         Int    @id @unique @default(autoincrement())
  game_id    Int    @unique
  name       String
  previewUrl String
  url        String
}
