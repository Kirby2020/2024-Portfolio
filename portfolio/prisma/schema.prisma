generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Project {
  id           String      @id @unique @default(cuid())
  title        String
  type         ProjectType @default(Other)
  description  String
  url          String
  previewUrl   String
  dateCreated  DateTime?
  dateUploaded DateTime    @default(now())
  dateEdited   DateTime    @updatedAt
}

enum ProjectType {
  Other
  YouTube
  GitHub
}

model Image {
  id             String         @id @unique @default(cuid())
  title          String
  tags           ImageTag[]
  collections    Collection[]
  fileName       String
  filePath       String
  fileExtension  ImageExtension
  fileSize       Float
  fileDimensionX Float
  fileDimensionY Float
  dateCreated    DateTime?
  dateUploaded   DateTime       @default(now())
  dateEdited     DateTime       @updatedAt
}

model ImageTag {
  id     Int     @id @unique @default(autoincrement())
  title  String
  images Image[]
}

enum ImageExtension {
  PNG
  JPG
  JPEG
  GIF
}

model Collection {
  id         String  @id @unique @default(cuid())
  title      String
  images     Image[]
  previewUrl String  @default("https://k41jfyz0rmi8ju7o.public.blob.vercel-storage.com/images/EfdP1_uU0AIT5D1.jpg")
}

model Game {
  id         Int    @id @unique @default(autoincrement())
  game_id    Int    @unique
  name       String
  previewUrl String
  url        String
}
